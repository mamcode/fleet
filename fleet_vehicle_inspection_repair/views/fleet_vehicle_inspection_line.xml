<odoo>

    <record model="ir.ui.view" id="fleet_vehicle_inspection_line_form_view">
        <field name="name">fleet.vehicle.inspection.line.form (in fleet_vehicle_inspection_repair)</field>
        <field name="model">fleet.vehicle.inspection.line</field>
        <field name="inherit_id" ref="fleet_vehicle_inspection.fleet_vehicle_inspection_line_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="products" string="Repair Products" attrs="{'invisible': [('result', 'not in', ['failure'])]}">
                    <field name="repair_product_ids" mode="tree,kanban"
                           context="{'default_inspection_line_id': active_id, 'default_inspection_id': parent.id}">

                        <tree>
                            <field name="type"/>
                            <field name="categ_id"/>
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal"/>
                        </tree>
                        <kanban class="o_kanban_mobile">
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                        <div class="o_kanban_record_top">
                                            <div class="o_kanban_record_headings">
                                                <strong class="o_kanban_record_title">
                                                    <span>
                                                        Product:
                                                        <t t-esc="record.product_id.value"/>
                                                    </span>
                                                </strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12 text-muted">
                                                <span>
                                                    Quantity:
                                                    <t t-esc="record.product_uom_qty.value"/>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 text-muted">
                                                <span>
                                                    Unit Price:
                                                    <t t-esc="record.price_unit.value"/>
                                                </span>
                                            </div>
                                            <div class="col-6 text-muted text-right">
                                                <span>
                                                    Total Price:
                                                    <t t-esc="record.price_subtotal.value"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="amount_total" nolabel="1" sum="Total amount" class="oe_subtotal_footer_separator"/>
                    </group>
                    <div class="oe_clear"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
